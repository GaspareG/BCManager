<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/background_image"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:contentDescription="@string/desc_background_profile"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_background" />


                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/image_profile"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:src="@drawable/default_profile"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="2dp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/default_name"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_city"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="0dp"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/icon_place"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:src="@drawable/icon_place"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/text_city"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="60dp"
                        android:gravity="bottom"
                        android:text="@string/default_city"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_street"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="60dp"
                        android:gravity="top"
                        android:text="@string/default_street"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="14sp" />


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_work"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="0dp"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/icon_work"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:src="@drawable/icon_work"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/text_role"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="60dp"
                        android:gravity="bottom"
                        android:text="@string/default_job_role"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_jobplace"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="60dp"
                        android:gravity="top"
                        android:text="@string/default_job_place"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="14sp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_number"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="0dp"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/icon_call"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:src="@drawable/icon_call"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/text_number"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="60dp"
                        android:gravity="bottom"
                        android:text="@string/default_phone"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="60dp"
                        android:gravity="top"
                        android:text="@string/numero_telefono"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="14sp" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_mail"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="0dp"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/icon_mail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:src="@drawable/icon_mail"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/text_mail"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="60dp"
                        android:gravity="bottom"
                        android:text="@string/default_website"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="60dp"
                        android:gravity="top"
                        android:text="@string/e_mail"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="14sp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_telegram"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="0dp"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/icon_telegram"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:src="@drawable/icon_send"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/text_telegram"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="60dp"
                        android:gravity="bottom"
                        android:text="@string/telegram_nick"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="60dp"
                        android:gravity="top"
                        android:text="@string/telegram"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="14sp" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_website"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="6dp"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/icon_website"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:src="@drawable/icon_website"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/text_website"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="60dp"
                        android:gravity="bottom"
                        android:text="@string/default_website"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="60dp"
                        android:gravity="top"
                        android:text="@string/sito_web"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="14sp" />


                </android.support.v7.widget.CardView>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</layout>