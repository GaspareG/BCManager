<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
    android:gravity="center_vertical|center"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/image_background"
                    android:src="@drawable/default_background"
                    android:contentDescription="backoround profile" />


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/default_profile"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Gaspare Ferraro"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:layout_marginBottom="0dp"
                android:id="@+id/card_city"
                android:elevation="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:id="@+id/icon_place"
                    android:src="@drawable/icon_place"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="60dp"
                    android:gravity="bottom"
                    android:text="Genova"
                    android:id="@+id/text_city"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="60dp"
                    android:gravity="top"
                    android:text="Passo ca' dei rissi 7"
                    android:id="@+id/text_street"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14sp" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:layout_marginBottom="0dp"
                android:id="@+id/card_work"
                android:elevation="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:id="@+id/icon_work"
                    android:src="@drawable/icon_work"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="60dp"
                    android:gravity="bottom"
                    android:id="@+id/text_role"
                    android:text="Studente"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="60dp"
                    android:gravity="top"
                    android:id="@+id/text_jobplace"
                    android:text="UniversitÃ  di Pisa"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:layout_marginBottom="0dp"
                android:id="@+id/card_number"
                android:elevation="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:src="@drawable/icon_call"
                    android:id="@+id/icon_call"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="60dp"
                    android:gravity="bottom"
                    android:text="+393926477802"
                    android:id="@+id/text_number"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="60dp"
                    android:gravity="top"
                    android:text="Numero di telefono"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14dp" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:id="@+id/card_mail"
                android:layout_marginBottom="0dp"
                android:elevation="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:src="@drawable/icon_mail"
                    android:id="@+id/icon_mail"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="60dp"
                    android:gravity="bottom"
                    android:text="ferraro@gaspa.re"
                    android:id="@+id/text_mail"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="60dp"
                    android:gravity="top"
                    android:text="E-Mail"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14dp" />



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:id="@+id/card_telegram"
                android:layout_marginBottom="0dp"
                android:elevation="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:src="@drawable/icon_send"
                    android:id="@+id/icon_telegram"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="60dp"
                    android:gravity="bottom"
                    android:text="\@GaspareG"
                    android:id="@+id/text_telegram"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="60dp"
                    android:gravity="top"
                    android:text="Telegram"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14dp" />



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:layout_marginBottom="0dp"
                android:id="@+id/card_website"
                android:layout_marginTop="6dp"
                android:elevation="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:src="@drawable/icon_website"
                    android:id="@+id/icon_website"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="60dp"
                    android:gravity="bottom"
                    android:text="gaspa.re"
                    android:id="@+id/text_website"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="60dp"
                    android:gravity="top"
                    android:text="Sito web"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="14dp" />


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>

</layout>